<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kfodor.MySensors" android:versionName="@string/app_version" android:versionCode="3">
<uses-sdk android:targetSdkVersion="15" android:minSdkVersion="7"></uses-sdk>
    <application android:label="@string/app_name"
        android:icon="@drawable/title_icon"
        android:description="@string/app_about_text" android:debuggable="false">
        <activity android:name=".MySensors" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".SensorView" android:screenOrientation="nosensor" class=".SensorView">
        </activity>
    </application>
</manifest>
